<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <%
        // message the validation
        if (messages.errors) {
        for (i = 0; i < messages.errors.length; i++) {
        %>
        <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <strong>Fail !</strong> <%= messages.errors[i].msg %>
        </div>
        <%
        }
        }

        // message the reason change password fail
        if (messages.reason_fail) {
        %>
        <div class="alert alert-warning">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <%= messages.reason_fail %>
        </div>
        <%
        }

        // message if success
        if (messages.success) {
        %>
        <div class="alert alert-success">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <%= messages.success %>
        </div>
        <%
        }
        %>

        <h1>
            Processing Orders
        </h1>
        <br>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-body">
                        <table id="tableListProcessingOrders" class="table table-bordered table-striped dataTable">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>User Name</th>
                                <th>User Phone</th>
                                <th>User Address</th>
                                <th>Order Date</th>
                                <th>Delivery Date</th>
                                <th>Ship fee</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            <% orders.forEach(function(order){ %>
                            <tr>
                                <td><%= order.id %></td>
                                <td><%= order.user_name %></td>
                                <td><%= order.user_phone %></td>
                                <td><%= order.user_address %></td>
                                <td><%= order.order_date.toLocaleString() %></td>
                                <td><%= order.delivery_date.toLocaleString() %></td>
                                <td><%= order.ship_fee %></td>
                                <td><%= order.total_amount %></td>
                                <td>
                                    <% if(order.status == "Processing") { %>
                                    <span class="label label-warning"><%= order.status %></span>
                                    <% } else if(order.status == "Confirmed") {%>
                                    <span class="label label-danger"><%= order.status %></span>
                                    <%}%>
                                </td>
                                <td>
                                    <% if(order.status == "Processing"){ %>
                                    <a href='/orders/processing/<%= order.id %>' title='Continue processing'
                                       class='btn btn-warning btn-flat'><span class='fa fa-edit'
                                                                              aria-hidden='true'></span></a>
                                    <% } else if(order.status == "Confirmed") {%>
                                    <a href='/orders/assigned/<%= order.id %>' title='Assign DeliMan'
                                       class='btn btn-danger btn-flat'><span class='fa fa-user'
                                                                              aria-hidden='true'></span></a>
                                    <%}%>
                                </td>
                            </tr>
                            <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>

        </div>
    </section>
</div>


<div class="modal fade" id="confirm-process-order" role="dialog">
    <form method="POST" id="form-process-order">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3>Confirm to process order?</h3>
                </div>
                <div class="modal-body">
                    <input type="text" name="status" id="status" value="Processing" hidden="true">
                    <input type="text" name="employee_id" id="employee_id" hidden="true" value="<%= session.user.id %>">
                    Click on "Yes" to continue, "No" to cancel.
                </div>
                <div class="modal-footer">
                    <button type="button" id="exitModal" class="btn btn-danger" data-dismiss="modal">No</button>
                    <button type="submit" class="btn btn-primary">Yes</button>
                </div>
            </div>
        </div>
    </form>
</div>